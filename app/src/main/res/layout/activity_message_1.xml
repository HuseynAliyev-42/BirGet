<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Message_1">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/navigation"
        app:labelVisibilityMode="labeled"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        app:menu="@menu/menu1"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/drc"
        app:itemTextColor="@drawable/drc"
        />
    <LinearLayout
        android:id="@+id/line1"
        android:layout_below="@id/navigation"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <Button
            android:id="@+id/masaj"
            android:text="Mesajlar"
            android:background="@android:color/white"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/notifications"
            android:text="Bildirimler"
            android:background="@android:color/white"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/scalemessage"
        android:layout_width="200dp"
        android:layout_height="7dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/line1"/>

    <LinearLayout
        android:id="@+id/scalenotification"
        android:layout_width="200dp"
        android:layout_height="7dp"
        android:layout_below="@id/line1"
        android:layout_toRightOf="@id/scalemessage"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="invisible" />
    <ListView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scalemessage"
        android:id="@+id/rec1"/>
    <TextView
        android:id="@+id/empty"
        android:layout_below="@id/line1"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:text="Hal-hazırda aktiv mesajlaşdığınız biri yoxdur!"
        android:textAlignment="center"/>
    <RelativeLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1"
        android:id="@+id/rec2">
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_details_black_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="45dp"
                    android:layout_height="105dp"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Səyahətiniz haqqında qeyd edin!"
                    android:layout_toRightOf="@id/image"/>

                <TextView
                    android:id="@+id/detal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/image"
                    android:text="Əgər maşınınız varsa və səyahətinizi qeydiyyatdan keçirtmək istəyirsinizsə buraya basın. Səyahətiniz haqqında detalları yazaraq digər insanlardan daha üstün ola bilərsiniz!"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_below="@id/card1"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_2_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/adam"
                    android:layout_alignParentLeft="true"
                    android:layout_width="45dp"
                    android:layout_height="105dp"/>
                <TextView
                    android:id="@+id/title_2_1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Profil şəklinizi daxil edin!"
                    android:layout_toRightOf="@id/image_2_1"/>

                <TextView
                    android:id="@+id/detal_2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_2_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/image_2_1"
                    android:text="Profil şəklinizi daxil etmək üçün basın! Profil şəklinizi yükləyərək digərlərindən daha qabaqda olun."
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>