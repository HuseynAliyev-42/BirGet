<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="23 Dekabr - 17:00"
            android:textColor="@android:color/black"
            android:textSize="23sp" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fromplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baki"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/to" />

            <TextView
                android:id="@+id/toplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gence"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/line1"
            android:layout_marginTop="5dp"
            android:background="@color/dark_board" />

        <TextView
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Cavab yoxdur"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/condition"
            android:layout_marginTop="5dp"
            android:background="@color/dark_board"
            android:orientation="horizontal" />
        <Button
            android:id="@+id/ignore"
            android:background="@drawable/yasil_button"
            android:text="İstəyinizi rədd edin"
            android:layout_alignParentRight="true"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>