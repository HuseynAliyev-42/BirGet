<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/navigation"
        android:background="@color/colorPrimary"
        app:labelVisibilityMode="labeled"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        app:menu="@menu/menu1"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/drc"
        app:itemTextColor="@drawable/drc"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/navigation2"
        android:background="@color/colorPrimary"
        app:labelVisibilityMode="labeled"
        android:layout_alignParentTop="true"
        app:menu="@menu/menu_2"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/drc"
        app:itemTextColor="@drawable/drc"
        />
    <EditText
        android:id="@+id/title1"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:hint="Təklifinizin ümumi məzmunu" />

    <EditText
        android:layout_centerHorizontal="true"
        android:id="@+id/comment"
        android:layout_width="355dp"
        android:layout_below="@id/title1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:autoLink="all"
        android:gravity="top|left"
        android:hint="Zəhmət olmasa, öz təklifiniz və ya şikayətiniz haqqında yazın!"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="5"
        android:maxLines="10"
        android:minLines="1"
        android:scrollbars="none" />
    <Button
        android:id="@+id/send"
        android:layout_below="@id/comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Göndər"
        android:textColor="#fff"
        android:background="@drawable/yasil_button"
        android:layout_width="250dp"
        android:layout_height="40dp"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="169dp"
        android:text="Bizə istədiyiniz mövzu haqqında təklif və ya şikayət yaza bilərsiniz!"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="23dp" />
    </RelativeLayout>
</ScrollView>