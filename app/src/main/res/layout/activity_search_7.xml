<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            android:text="2 Dekabr"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/time"
            android:layout_below="@id/date"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="12:00"
            android:textColor="@color/text_color"/>
        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/routefrom"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/time"
            android:src="@drawable/route"
            android:layout_below="@id/date"
            android:layout_marginTop="35dp" />
        <ImageView
            android:id="@+id/line1"
            android:layout_marginLeft="6dp"
            android:layout_below="@id/routefrom"
            android:layout_toRightOf="@id/time"
            android:src="@drawable/line"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_marginTop="-10dp"/>
        <ImageView
            android:id="@+id/routeto"
            android:src="@drawable/route"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-8dp"
            android:layout_below="@id/line1"
            android:layout_toRightOf="@id/time"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/predicttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginTop="-8dp"
            android:layout_toLeftOf="@id/routeto"
            android:text="13:00"
            android:textColor="@color/text_color"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/fromplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Baki"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@id/routefrom"
            android:layout_below="@id/date"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/toplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Gence"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@id/routeto"
            android:layout_below="@id/fromplace"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/dark_board"
            android:text="2"
            android:layout_below="@id/toplace"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"/>
        <TextView
            android:id="@+id/seat_text"
            android:layout_toRightOf="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/dark_board"
            android:text="oturacaq boş"
            android:layout_below="@id/toplace"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@android:color/black"
            android:text="59"
            android:layout_toRightOf="@id/seat_text"
            android:layout_below="@id/toplace"
            android:layout_marginTop="51dp"
            android:layout_marginLeft="167dp"
            />
        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="AZN"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/price"
            android:layout_below="@id/toplace"
            android:layout_marginTop="51dp"/>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:id="@+id/line2"
            android:layout_below="@id/price_text"
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:background="@color/dark_board"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatih"
            android:layout_below="@id/line2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_board"
            android:text="4.5"
            android:layout_below="@id/name"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/maxrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="/5 -"
            android:textColor="@color/dark_board"
            android:layout_toRightOf="@id/rating"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/ratingscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/maxrating"
            android:text="0"
            android:textColor="@color/dark_board"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/ratingscoretext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/dark_board"
            android:layout_toRightOf="@id/ratingscore"
            android:layout_below="@id/name"
            android:text="bal verən"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/prof"
            android:id="@+id/profil"
            android:layout_toRightOf="@id/ratingscoretext"
            android:layout_below="@id/line2"/>
        <TextView
            android:id="@+id/detal"
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Gel bax gor brooo"
            android:textColor="@color/dark_board"
            android:layout_below="@id/ratingscore"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/sendmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:textSize="21sp"
            android:text="İstifadəçiyə mesaj göndər"
            android:layout_below="@id/detal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:id="@+id/line3"
            android:layout_below="@id/sendmessage"
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:background="@color/dark_board">

        </LinearLayout>
        <ImageView
            android:id="@+id/cigarimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/line3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/smoking"/>
        <TextView
            android:id="@+id/cigartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Siqaret cekilmez"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/dark_board"
            android:layout_below="@id/line3"
            android:layout_toRightOf="@id/cigarimage"/>
        <ImageView
            android:id="@+id/talkimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/cigarimage"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/talk"/>
        <TextView
            android:id="@+id/talktext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Cox danismasaq yaxsidir"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/dark_board"
            android:layout_below="@id/cigarimage"
            android:layout_toRightOf="@id/cigarimage"/>
        <ImageView
            android:id="@+id/petimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/talkimage"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/animal2345"/>
        <TextView
            android:id="@+id/pettext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Heyvan olmaz"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/dark_board"
            android:layout_below="@id/talkimage"
            android:layout_toRightOf="@id/cigarimage"/>
        <ImageView
            android:id="@+id/musicimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/petimage"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/music"/>
        <TextView
            android:id="@+id/musictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Musiqi olmaz"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/dark_board"
            android:layout_below="@id/petimage"
            android:layout_toRightOf="@id/petimage"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="25dp"
            android:id="@+id/card1"
            android:layout_below="@id/musictext"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:background="@drawable/baclk" />

                <TextView
                    android:id="@+id/carName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/img1"
                    android:text="kdkdk"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/carName"
                    android:layout_toRightOf="@id/img1"
                    android:text="djdjd"
                    android:textColor="#000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/carYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/carNumber"
                    android:layout_toRightOf="@id/img1"
                    android:text="dkdkd"
                    android:textColor="#000"
                    android:textSize="17dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/customertitle"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Bu səyahəti paylaşanlar"/>
         <ListView
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customertitle"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/list1condition"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:visibility="invisible"
            android:textAlignment="center"
            android:text="Hal-hazırda səyahəti paylaşan adam yoxdur!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customertitle"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/submit"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@id/list1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/yasil_button"
            android:text="Rezerv et"
            android:textColor="@android:color/white" />
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_below="@id/submit"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4810068176185955/4151663464">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>
</ScrollView>